<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header_gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_main_height">
        <ImageView
            android:id="@+id/home_city_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:src=""
            android:background="@drawable/selector_press_translucent_bg"
            android:drawablePadding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shap_oval_white_bg">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/search_img"
                android:layout_marginRight="9dp"/>
            <TextView
                android:id="@+id/home_keyword_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="按摩"
                android:textColor="@color/app_gray"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:text="搜索"
            android:textSize="18sp"
            android:textColor="@color/app_gray"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:background="@drawable/selector_press_translucent_bg"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_line_height"
        android:background="@color/app_gray_line"/>

</FrameLayout>
