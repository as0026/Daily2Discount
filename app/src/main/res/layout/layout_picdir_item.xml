<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMatchWrap"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp" >

    <FrameLayout
        android:id="@+id/item_dirImage_layout"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_pic_dir"
        android:paddingBottom="10dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/item_dir_img"
            style="@style/layoutMatchMatch"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_photos" />
    </FrameLayout>

    <LinearLayout
        style="@style/layoutWrapWrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_dirImage_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_dirName_txt"
            style="@style/layoutWrapWrap"
            tools:text="所有图片"
            android:textColor="@color/black_translucent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_dirCount_txt"
            style="@style/layoutWrapWrap"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            tools:text="4723张"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_dirSelected_Img"
        style="@style/layoutWrapWrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_aqe" />

</RelativeLayout>